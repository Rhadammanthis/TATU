<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/sample.actionscontentview"
    android:id="@+id/shareMain"
    xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="horizontal">
        <com.facebook.share.widget.ShareButton
        android:id="@+id/shareFacebook"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="8dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_facebook"
        style="@style/FacebookLoginButton"/>

    <ImageButton
        android:id="@+id/shareTwitter"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="8dip"
        android:layout_above="@+id/shareFacebook"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/selector_twitter"
        android:text="Twitter" />

    <ImageButton
        android:id="@+id/shareGPlus"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="8dip"
        android:layout_alignLeft="@+id/shareTwitter"
        android:layout_below="@+id/shareFacebook"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/selector_google"
        android:text="GPlus" />
    
        <ImageButton
        android:id="@+id/shareInsta"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="8dip"
        android:layout_alignLeft="@+id/shareTwitter"
        android:layout_below="@+id/shareFacebook"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/selector_instagram"
        android:text="GPlus" />
</LinearLayout>

       <com.facebook.login.widget.LoginButton
        android:id="@+id/share_facebook_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp" />


    

</RelativeLayout>

