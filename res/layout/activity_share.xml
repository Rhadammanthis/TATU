<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/sample.actionscontentview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/shareFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="16dip"
        android:text="Facebook" />

    <Button
        android:id="@+id/shareTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shareFacebook"
        android:layout_alignLeft="@+id/shareFacebook"
        android:layout_alignRight="@+id/shareFacebook"
        android:layout_marginBottom="29dp"
        android:text="Twitter" />

    <Button
        android:id="@+id/shareGPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shareFacebook"
        android:layout_alignRight="@+id/shareFacebook"
        android:layout_below="@+id/shareFacebook"
        android:layout_marginTop="29dp"
        android:text="GPlus" />

</RelativeLayout>

