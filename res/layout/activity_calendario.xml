<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendarioBody"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <com.cceo.calendarcard.CalendarCard
        android:id="@+id/calendarCard6"
        android:layout_marginLeft="35dip"
        android:layout_marginRight="35dip"
        android:layout_marginTop="7dip"
        android:layout_marginBottom="7dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/calBar1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#5AABA5" />

    <View
        android:id="@+id/calBar2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#00837A" />

    <View
        android:id="@+id/calBar3"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#6ED6CF" />

    <View
        android:id="@+id/calBar4"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#85DCD6" />

    <ScrollView
        android:id="@+id/calendarScrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/calendarLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</LinearLayout>
