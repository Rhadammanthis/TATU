<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splash_view"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#00A499"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="180dip"
        android:layout_height="180dip"
		android:layout_marginTop="110dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_logo_round" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_facebook_login"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignLeft="@+id/login_continuar"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/login_continuar"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:id="@+id/login_continuar"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_above="@+id/login_facebook_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/selector_login"
        android:text="Continuar" />

</RelativeLayout>
