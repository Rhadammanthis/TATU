<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:id="@+id/shoppingTextItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:text="Shopping Item"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <CheckBox
            android:layout_centerVertical="true"
                        android:button="@null"
            android:background="@drawable/selector_checkbox_clean"
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:id="@+id/shoppingCheckBoxStstus"
            android:layout_width="37dip"
            android:layout_height="37dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

    <View
        android:id="@+id/ejerBar1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#5AABA5" />

    <View
        android:id="@+id/ejerBar2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#00837A" />

    <View
        android:id="@+id/ejerBar3"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#6ED6CF" />

    <View
        android:id="@+id/ejerBar4"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#85DCD6" />

</LinearLayout>