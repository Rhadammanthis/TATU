<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/sample.actionscontentview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/shareText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="6dip"
        android:text="FELICIDADES"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/shareText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shareText1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="6dip"
        android:paddingBottom="16dip"
        android:text="Haz completado la dieta XXX. Ahora actualiza tus datos"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <View 
        android:id="@+id/shareView1"
        android:layout_below="@+id/shareText2"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#9f9f9f"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"/>
    
    <TextView
        android:id="@+id/shareText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/shareView1"
        android:paddingTop="15dip"
        android:text="PESO"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/pesoEditText_Share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:layout_marginLeft="5dip"
        android:layout_below="@+id/shareText3"
        android:layout_centerHorizontal="true"
        android:hint="Peso" />
    
    <TextView
        android:id="@+id/shareText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pesoEditText_Share"
        android:paddingTop="6dip"
        android:text="TALLA"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/tallaEditText_Share"
        android:inputType="numberDecimal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:layout_marginLeft="5dip"
        android:layout_below="@+id/shareText4"
        android:layout_centerHorizontal="true"
        android:hint="Talla" />

    <Button
        android:id="@+id/buttonGuardar_share"
        android:layout_width="120dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="5dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tallaEditText_Share"
        android:paddingEnd="16dip"
        android:layout_centerHorizontal="true"
        android:text="Guardar" />


</RelativeLayout>

