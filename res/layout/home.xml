<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeBodyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chart1"
        android:layout_centerHorizontal="true"
        android:text="@string/swipe"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:visibility="invisible" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart1"
        android:layout_width="300dip"
        android:layout_height="185dip"
        android:layout_marginTop="22dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" />

    <!--  -->

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/chart1"
        android:layout_alignRight="@+id/chart1"
        android:layout_alignTop="@+id/textView" >

        <RelativeLayout
            android:id="@+id/backLayout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#f0f0f0" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="39dp"
                android:text="KG Para Peso Ideal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/homePesoDif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignParentRight="true"
                android:text="0kg"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="26dp"
                android:text="Motivacíon"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/homeMotivacionBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:text="Poder ir a la playa y poder usar el traje de baño que me gusta. Comer un chingo de brocoli y tomar muchita agua."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frontLayout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#f0f0f0"
            android:focusableInTouchMode="false" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/abajoButtonlol"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dip"
                android:background="@null"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/buttonTopLeft"
                    android:layout_width="120dip"
                    android:layout_height="180dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="Camera Button"
                    android:padding="5dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_button_icon1" />

                <ImageButton
                    android:id="@+id/buttonDownLeft"
                    android:layout_width="120dip"
                    android:layout_height="180dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="Calendar"
                    android:padding="5dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_button_icon2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mylinearLayoutRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/abajoButtonlol"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:background="@null"
                android:clickable="true"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/buttonTopRight"
                    android:layout_width="120dip"
                    android:layout_height="180dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="My diets"
                    android:padding="5dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_button_icon3" />

                <ImageButton
                    android:id="@+id/buttonDownRight"
                    android:layout_width="120dip"
                    android:layout_height="180dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="Help"
                    android:padding="5dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_button_icon4" />
            </LinearLayout>

            <Button
                android:id="@+id/abajoButtonlol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="25dip"
                android:paddingLeft="20dip"
                
                android:text="Estadísticas" />
        </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>

</RelativeLayout>